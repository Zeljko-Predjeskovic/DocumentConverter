		<PackageReference Include="Microsoft.NETCore.UniversalWindowsPlatform" Version="6.2.14" />

		<Folder Include="Platforms\UniversalWindows\" />
	</ItemGroup>

	<ItemGroup>
	  <ProjectReference Include="..\DocumentConverter\DocumentConverter.csproj" />
